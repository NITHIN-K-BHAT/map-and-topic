                    <dir-entry sllink="SLSDOC" slsdocrf="DIR-ENTRYREF" usage="edio mena">
                         <dir-entry-name>Deputy Special Representative of the UN Secretary-General for Development and Humanitarian Support</dir-entry-name>
                         <person-group>
