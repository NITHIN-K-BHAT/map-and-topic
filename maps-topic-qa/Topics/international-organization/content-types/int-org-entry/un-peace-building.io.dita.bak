     <int-org-entry id="IO-UN.PB.0012.1" iso="io-un.pb.0012.1" print-style="COLUMN" sllink="SLSDOC" slsdocrf="INT-ORG-ENTRYREF" usage="ewyb edio ass">
          <int-org-entry-head>
               <int-org-name-group type="MAIN">
                    <org-entry-name>United Nations Regional Office for Central Africa</org-entry-name>
                    <abbr>UNOCA</abbr>
               </int-org-name-group>
          </int-org-entry-head>
          <int-org-block>
               <address-block>
                    <address type="POSTAL">
                         <verbatim-address>BP 23773, Cité de la Démocratie, Villas 55-57, Libreville, Gabon</verbatim-address>
                    </address>
