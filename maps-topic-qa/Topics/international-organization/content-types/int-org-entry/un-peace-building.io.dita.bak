                    <dir-entry sllink="SLSDOC" slsdocrf="DIR-ENTRYREF">
                         <dir-entry-name>Verification Director</dir-entry-name>
                         <person-group>
                              <person>
                                   <person-name>
                                        <forename>Raúl</forename>
                                        <surname>Rosende</surname>
                                   </person-name>
